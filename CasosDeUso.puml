@startuml
!theme plain

left to right direction

actor "Usuario" as User
actor "Artista" as Artist
actor "Administrador" as Admin

rectangle "App Móvil WaveUl" {
  ' Autenticación y perfil
  usecase "Registrar cuenta" as UC1
  usecase "Iniciar sesión" como UC2
  usecase "Recuperar contraseña" como UC3
  usecase "Gestionar perfil" como UC4
  
  ' Exploración y descubrimiento
  usecase "Explorar canciones" como UC5
  usecase "Buscar música" como UC6
  usecase "Explorar artistas" como UC7
  usecase "Explorar géneros" como UC8
  usecase "Explorar álbumes" como UC9
  
  ' Reproducción e interacción
  usecase "Reproducir canciones" como UC10
  usecase "Gestionar playlists" como UC11
  usecase "Dar like/me gusta" como UC12
  usecase "Crear reseñas" como UC13
  usecase "Seguir artistas/usuarios" como UC14
  
  ' Biblioteca personal
  usecase "Ver historial de reproducción" como UC15
  usecase "Ver canciones favoritas" como UC16
  usecase "Ver playlists creadas" como UC17
}

rectangle "Panel Artista" {
  usecase "Gestionar perfil artístico" como UC18
  usecase "Subir canciones" como UC19
  usecase "Gestionar álbumes" como UC20
  usecase "Ver estadísticas" como UC21
}

rectangle "Panel Administración" {
  usecase "Gestionar usuarios" como UC22
  usecase "Gestionar contenido" como UC23
  usecase "Moderar reseñas" como UC24
  usecase "Gestionar géneros" como UC25
  usecase "Ver reportes" como UC26
}

